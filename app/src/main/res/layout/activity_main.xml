<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/offwhite">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pojok"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/img1"/>


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/teamwork"
        android:id="@+id/img2"
        android:layout_below="@+id/img1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_below="@+id/img2"
        android:id="@+id/tvsalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atur keuanganmu dengan \n“Simpellet”"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/popinsemi"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Simpellet adalah aplikasi keuangan yang simpel dan efisien untuk mengatur pemasukan dan pengeluaran dengan tampilan intuitif. Dengan Simpellet, kamu bisa mengelola keuanganmu dengan mudah dan fokus pada tujuan keuanganmu untuk masa depan yang lebih baik"
        android:id="@+id/tvketerangan"
        android:fontFamily="@font/popinnreg"
        android:textAlignment="center"
        android:layout_below="@+id/tvsalam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/itemtext"
        />

    <Button
        android:id="@+id/btnmasuk"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:text="Masuk"
        android:backgroundTint="@color/coklat"
        android:layout_below="@+id/tvketerangan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/popinnbold"
        />

    <Button
        android:id="@+id/btndaftar"
        android:layout_width="284dp"
        android:layout_height="48dp"
        android:text="Daftar"
        android:layout_below="@+id/btnmasuk"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/popinnbold"
        />
</RelativeLayout>